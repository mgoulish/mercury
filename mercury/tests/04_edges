echo 
echo ==============================================
echo test: 04_edges
echo -----------------------------
echo Make a 3-linear router network, add 100 edge-
echo nodes to either end 
echo ==============================================
echo 
echo 
echo 

seed PID

verbose

inc versions

linear 3

edges A 5
edges C 5

run 

sleep 15

#------------------------------------------------------
# Make 100 senders attached to the edge nodes of A,
# and 100 receivers attached to the edge nodes of C.
#------------------------------------------------------
recv count 20 edges C n_messages 100 address addr_%d
run
echo    
echo --------------------------------------------------
sleep 15
echo --------------------------------------------------
echo    
send count 20 edges A n_messages 100 address addr_%d

run

failsafe 30

start_client_status_check 10
